<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/Home/Index">Ürün Stok Takip</a>
            </div>

            <ul class="nav navbar-nav">

                @if (User.IsInRole("A"))
                {
                    <li><a href="/Kullanicilar/Index">Kullanıcı</a></li>
                    <li><a href="/OduncVerilen/Index">Ödünç Verilenler</a></li>
                    <li><a href="/Urun/KritikStok">Kritik Stok @Html.Action("StokCount", "Urun")</a></li>
                    <li><a href="/Urun/StokGrafik">Stok Grafiği</a></li>
                }
                <li><a href="/Kategori/Index">Kategoriler</a></li>
                <li><a href="/Kullanici/Guncelle" style="color:white">@Session["Ad"] @Session["Soyad"] Kullanıcı</a></li>
                <li><a href="/Urun/Index">Ürünler</a></li>
                @if (User.IsInRole("U"))
                {
                    <li><a href="/OduncVerilen/Index">Ödünç Verilenler</a></li>
                    <li><a href="/Sepet/Index">Sepet</a></li>
                }

                <li><a href="/Account/LogOut">Çıkış Yap</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
      
    </div>

</body>
</html>